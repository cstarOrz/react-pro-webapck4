{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./static/build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": [
    "./static/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}